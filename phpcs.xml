<?xml version="1.0"?>
<ruleset name="Interactive Lesson Coding Standards">
    <description>PHP_CodeSniffer ruleset for Interactive Lesson plugin</description>
    <rule ref="WordPress"/>
    <rule ref="PHPCompatibility">
        <config name="testVersion" value="7.4-"/>
    </rule>
    <file>Inc/</file>
    <file>tests/phpunit/</file>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>
</ruleset>