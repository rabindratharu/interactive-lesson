<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="tests/phpunit/bootstrap.php"
    colors="true"
    verbose="true"
    stopOnFailure="false"
    executionOrder="random"
    resolveDependencies="true"
>
    <testsuites>
        <testsuite name="Interactive Lesson Test Suite">
            <directory>tests/phpunit</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="WP_TESTS_DIR" value="vendor/wp-phpunit/wp-phpunit"/>
        <env name="WP_DEVELOP_DIR" value="/tmp/wordpress"/>
    </php>
    <coverage>
        <include>
            <directory suffix=".php">Inc/</directory>
        </include>
        <exclude>
            <directory>Inc/Traits/</directory>
        </exclude>
    </coverage>
</phpunit>